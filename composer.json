{
    "name": "casperlaitw/sso",
    "description": "Simple Single Sign-On",
    "keywords": ["sso", "auth"],
    "license": "MIT",
    "homepage": "https://github.com/CasperLaiTW/sso",
    "authors": [
        {
            "name": "Casper Lai",
            "email": "casper.lai@sleepingdesign.com"
        }
    ],
    "require": {
        "php": ">=7.3.0",
        "ext-json": "*",
        "ext-gmp": "*",
        "jasny/immutable": "^2.1",
        "psr/simple-cache": "^1.0",
        "psr/log": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.59",
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1.0",
        "codeception/module-rest": "^1.2",
        "desarrolla2/cache": "^3.0",
        "jasny/http-message": "^1.3",
        "jasny/php-code-quality": "^2.6.0",
        "jasny/phpunit-extension": "^0.3.2",
        "yubb/loggy": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Casperlaitw\\SSO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Casperlaitw\\Tests\\SSO\\": "tests/unit/"
        }
    },
    "scripts": {
        "test": [
            "phpstan analyse",
            "codecept run",
            "phpcs -p src"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
